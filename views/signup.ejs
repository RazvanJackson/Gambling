#background:after{
    content: "";
    z-index: -1;
    top: 0px;
    bottom: 0px;
    position: absolute;
    background-image: url('/theme-background.jpg');
    background-position: center;
    background-size: cover;
    width: 100%;
    height: 100%;
    opacity: .85;
}
</style>

